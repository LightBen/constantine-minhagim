---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import BottomNav from "../../components/BottomNav.astro";
import PageHero from "../../components/PageHero.astro";
import { useTranslations } from "../../i18n/utils";
import { Image } from "astro:assets";
import imgCommunity from "../../assets/connected.png";
import imgOrHazeev from "../../assets/orhazeevlogo-hd.png";

export function getStaticPaths() {
    return [{ params: { locale: "fr" } }, { params: { locale: "he" } }];
}

const { locale } = Astro.params;
const t = useTranslations(locale as "fr" | "he");

const links = [
    {
        title: locale === "fr" ? "Groupe Facebook" : "קבוצת פייסבוק",
        desc:
            locale === "fr"
                ? "Rejoignez notre groupe de discussion"
                : "הצטרף לקבוצת הדיון שלנו",
        icon: '<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/>',
        color: "bg-[#1877F2]",
        href: "https://www.facebook.com/groups/185262976153983",
    },
    {
        title: locale === "fr" ? "Page Facebook" : "דף פייסבוק",
        desc:
            locale === "fr"
                ? "Suivez nos actualités officielles"
                : "עקוב אחרי החדשות הרשמיות שלנו",
        icon: '<path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>',
        color: "bg-[#1877F2]",
        href: "https://www.facebook.com/constantine.minhagim/",
    },
    {
        title: "Instagram",
        desc:
            locale === "fr"
                ? "Suivez-nous sur Instagram"
                : "עקוב אחרינו באינסטגרם",
        icon: '<path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>',
        color: "bg-[#E1306C]",
        href: "https://www.instagram.com/constantineminhagim/",
    },
    {
        title: "YouTube",
        desc:
            locale === "fr"
                ? "Abonnez-vous à notre chaîne"
                : "הירשם לערוץ שלנו",
        icon: '<path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>',
        color: "bg-[#FF0000]",
        href: "https://www.youtube.com/@ConstantineMinhagim",
    },
    {
        title: "Google Drive",
        desc:
            locale === "fr"
                ? "Accédez à nos ressources partagées"
                : "גישה למשאבים המשותפים שלנו",
        icon: '<path d="M12.01 1.485c2.082 0 3.754.025 4.843.073 1.182.052 2.37.247 3.285 1.162.915.915 1.11 2.103 1.162 3.285.048 1.09.073 2.761.073 4.843s-.025 3.754-.073 4.843c-.052 1.182-.247 2.37-1.162 3.285-.915.915-2.103 1.11-3.285 1.162-1.09.048-2.761.073-4.843.073s-3.754-.025-4.843-.073c-1.182-.052-2.37-.247-3.285-1.162-.915-.915-1.11-2.103-1.162-3.285C2.673 14.6 2.648 12.93 2.648 10.847s.025-3.754.073-4.843c.052-1.182.247-2.37 1.162-3.285.915-.915 2.103-1.11 3.285-1.162 1.09-.048 2.761-.073 4.843-.073zM7.674 6.74l3.052 5.286h6.104L13.78 6.74H7.674zm-2.43 1.403L8.3 13.43l3.053-5.287H5.244zm11.238 2.508l-3.053 5.287h6.104l-3.051-5.287z" />',
        color: "bg-[#0F9D58]",
        href: "https://drive.google.com/drive/folders/0BzlEWQTUwxa6YnRYYkJFU0NWalE",
    },
    {
        title: locale === "fr" ? "Or HaZeev" : "אור הזאב",
        desc:
            locale === "fr"
                ? "Découvrez le projet Or HaZeev"
                : "גלה את פרויקט אור הזאב",
        image: imgOrHazeev,
        color: "bg-white border-2 border-brand-gold",
        href: "https://orhazeev.com",
    },
];
---

<BaseLayout
    title={`${t("nav.community")} - ${t("site.title.1")}`}
    description={t("hero.subtitle")}
>
    <Header />

    <main class="flex-1 pb-20 md:pb-8">
        <PageHero title={t("nav.community")} image={imgCommunity} />

        <div class="container mx-auto px-4 py-8 md:py-12">
            <div class="max-w-4xl mx-auto text-center mb-12">
                <p class="text-lg text-gray-600 dark:text-gray-300">
                    {
                        locale === "fr"
                            ? "Restez connectés avec la communauté de Constantine à travers nos réseaux sociaux et plateformes de partage."
                            : "הישאר מחובר עם קהילת קונסטנטין דרך הרשתות החברתיות ופלטפורמות השיתוף שלנו."
                    }
                </p>
            </div>

            <div
                class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto"
            >
                {
                    links.map((link) => (
                        <a
                            href={link.href}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="group relative overflow-hidden bg-white dark:bg-brand-navy rounded-xl shadow-lg border border-gray-100 dark:border-gray-800 p-8 flex items-center gap-6 hover:shadow-2xl transition-all duration-300 hover:-translate-y-1"
                        >
                            <div
                                class={`w-16 h-16 rounded-full ${link.color} flex items-center justify-center text-white shrink-0 group-hover:scale-110 transition-transform duration-300 shadow-md overflow-hidden`}
                            >
                                {link.image ? (
                                    <Image
                                        src={link.image}
                                        alt={link.title}
                                        class="w-full h-full object-contain p-2"
                                    />
                                ) : (
                                    <svg
                                        class="w-8 h-8 fill-current"
                                        viewBox="0 0 24 24"
                                        set:html={link.icon}
                                    />
                                )}
                            </div>
                            <div class="text-left rtl:text-right">
                                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-1 group-hover:text-brand-blue dark:group-hover:text-brand-blue-light transition-colors">
                                    {link.title}
                                </h3>
                                <p class="text-sm text-gray-500 dark:text-gray-400">
                                    {link.desc}
                                </p>
                            </div>
                        </a>
                    ))
                }
            </div>
        </div>
    </main>

    <Footer />
    <BottomNav />
</BaseLayout>
