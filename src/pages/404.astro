---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { useTranslations, getLangFromUrl } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout title={`404 - ${t("404.title")}`}>
    <Header />

    <main
        class="flex-1 flex flex-col items-center justify-center min-h-[60vh] text-center px-4"
    >
        <h1
            class="text-6xl font-bold text-brand-blue dark:text-brand-gold mb-4"
        >
            404
        </h1>
        <h2
            class="text-2xl font-serif font-bold text-gray-900 dark:text-white mb-4"
        >
            {t("404.title")}
        </h2>
        <p class="text-gray-600 dark:text-gray-300 mb-8 max-w-md">
            {t("404.desc")}
        </p>

        <a href={`/${lang}/`} class="btn-primary">
            {t("404.home")}
        </a>
    </main>

    <Footer />
</BaseLayout>
