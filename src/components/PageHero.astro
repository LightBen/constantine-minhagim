---
interface Props {
    title: string;
    subtitle?: string;
    image?: string | ImageMetadata;
}

import { Image } from "astro:assets";
import defaultImage from "../assets/constantine-jlm.png";

const { title, subtitle, image } = Astro.props;
---

<div
    class="relative w-full h-64 md:h-80 flex items-center justify-center bg-brand-navy overflow-hidden mb-8"
>
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
        {
            image ? (
                typeof image === "string" ? (
                    <img
                        src={image}
                        alt={title}
                        class="w-full h-full object-cover opacity-50"
                    />
                ) : (
                    <Image
                        src={image}
                        alt={title}
                        class="w-full h-full object-cover opacity-50"
                    />
                )
            ) : (
                <Image
                    src={defaultImage}
                    alt={title}
                    class="w-full h-full object-cover opacity-50"
                />
            )
        }
        <div
            class="absolute inset-0 bg-gradient-to-t from-brand-navy/90 via-brand-navy/60 to-transparent"
        >
        </div>
    </div>

    <!-- Content -->
    <div class="relative z-10 text-center px-4 max-w-4xl mx-auto">
        <h1
            class="text-3xl md:text-5xl font-serif font-bold text-white dark:text-gold mb-2 drop-shadow-lg tracking-wide uppercase"
        >
            {title}
        </h1>
        {
            subtitle && (
                <p class="text-lg md:text-xl text-gray-200 font-light max-w-2xl mx-auto drop-shadow-md">
                    {subtitle}
                </p>
            )
        }
    </div>
</div>
