---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const navItems = [
    {
        href: `/${lang}/`,
        label: t("nav.home"),
        icon: "M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6",
    },
    {
        href: `/${lang}/halakha`,
        label: t("nav.halakha"),
        icon: "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253",
    },
    {
        href: `/${lang}/cuisine`,
        label: t("nav.cuisine"),
        icon: "M12 2a4 4 0 00-4 4v14a1 1 0 001 1h6a1 1 0 001-1V6a4 4 0 00-4-4z",
    }, // placeholder chef hat like
    {
        href: `/${lang}/articles`,
        label: t("nav.articles"),
        icon: "M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z",
    },
];
---

<nav
    class="md:hidden fixed bottom-0 left-0 w-full bg-white dark:bg-brand-navy border-t border-gray-200 dark:border-gray-800 z-40 pb-safe"
>
    <div class="flex justify-around items-center h-16">
        {
            navItems.map((item) => (
                <a
                    href={item.href}
                    class="flex flex-col items-center justify-center w-full h-full text-gray-500 dark:text-gray-400 hover:text-brand-blue dark:hover:text-brand-blue-light transition-colors"
                >
                    <svg
                        class="w-6 h-6 mb-1"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1.5"
                            d={item.icon}
                        />
                    </svg>
                    <span class="text-[10px] font-medium uppercase tracking-wide">
                        {item.label}
                    </span>
                </a>
            ))
        }

        <!-- Search Trigger (Optional, maybe opens modal) -->
        <button
            class="flex flex-col items-center justify-center w-full h-full text-gray-500 dark:text-gray-400 hover:text-brand-blue dark:hover:text-brand-blue-light transition-colors"
        >
            <svg
                class="w-6 h-6 mb-1"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <span class="text-[10px] font-medium uppercase tracking-wide"
                >Search</span
            >
        </button>
    </div>
</nav>
