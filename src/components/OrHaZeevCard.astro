---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="max-w-4xl mx-auto px-4 py-8 mb-12">
    <div
        class="relative bg-white dark:bg-brand-navy border border-brand-gold/30 rounded-lg p-6 md:p-8 shadow-lg overflow-hidden flex flex-col md:flex-row items-center gap-6 group hover:shadow-xl transition-all duration-300"
    >
        <!-- Decorative Gold Border/Corner -->
        <div class="absolute top-0 left-0 w-2 h-full bg-brand-gold"></div>
        <div
            class="absolute -right-10 -top-10 w-32 h-32 bg-brand-gold/10 rounded-full blur-2xl group-hover:bg-brand-gold/20 transition-colors"
        >
        </div>

        <!-- Logo / Image -->
        <div class="flex-shrink-0">
            <!-- Placeholder for Or HaZeev logo -->
            <div
                class="w-16 h-16 md:w-20 md:h-20 bg-brand-navy dark:bg-black rounded-full flex items-center justify-center border-2 border-brand-gold shadow-md"
            >
                <span class="text-brand-gold text-2xl font-bold">א</span>
            </div>
        </div>

        <!-- Text Content -->
        <div class="flex-1 text-center md:text-left rtl:md:text-right">
            <h3
                class="text-xl md:text-2xl font-serif font-bold text-brand-navy dark:text-brand-gold mb-2"
            >
                {
                    lang === "fr"
                        ? "Découvrez le projet Or HaZeev"
                        : "גלה את פרויקט אור הזאב"
                }
            </h3>
            <p
                class="text-gray-600 dark:text-gray-300 mb-4 text-sm md:text-base"
            >
                {
                    lang === "fr"
                        ? "Une initiative dédiée à la préservation et à la diffusion du patrimoine liturgique et musical de Constantine."
                        : "יוזמה המוקדשת לשימור והפצה של המורשת הליטורגית והמוזיקלית של קונסטנטין."
                }
            </p>
        </div>

        <!-- CTA Button -->
        <div>
            <a
                href="https://orhazeev.com"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-block px-6 py-3 bg-brand-gold hover:bg-brand-gold-dark text-white font-bold rounded shadow-md transition-colors text-sm uppercase tracking-wider transform group-hover:-translate-y-0.5"
            >
                {lang === "fr" ? "En savoir plus" : "למד עוד"}
            </a>
        </div>
    </div>
</section>
