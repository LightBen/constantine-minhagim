---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const isRtl = lang === "he";

const links = [
    { href: `/${lang}/halakha`, label: t("nav.halakha") },
    { href: `/${lang}/hazanout`, label: t("nav.hazanout") },
    { href: `/${lang}/cuisine`, label: t("nav.cuisine") },
    { href: `/${lang}/articles`, label: t("nav.articles") },
    {
        label: t("nav.more"),
        children: [
            { href: `/${lang}/rabbanim`, label: t("nav.rabbanim") },
            { href: `/${lang}/printouts`, label: t("nav.printouts") },
            { href: `/${lang}/donate`, label: t("nav.donate") },
            { href: `/${lang}/contact`, label: t("nav.contact") },
            { href: `/${lang}/about`, label: t("nav.about") },
        ],
    },
];
---

<div
    id="mobile-drawer"
    class="fixed inset-0 z-[60] invisible"
    aria-hidden="true"
>
    <!-- Backdrop -->
    <div
        id="drawer-backdrop"
        class="absolute inset-0 bg-black/60 opacity-0 transition-opacity duration-300"
    >
    </div>

    <!-- Drawer Content -->
    <aside
        id="drawer-content"
        class={`absolute top-0 bottom-0 w-full md:w-96 bg-white dark:bg-brand-navy shadow-2xl transform transition-transform duration-300 ease-out flex flex-col ${isRtl ? "-translate-x-full left-0" : "translate-x-full right-0"}`}
    >
        <!-- Header -->
        <div
            class="p-4 flex items-center justify-between border-b border-gray-100 dark:border-gray-800"
        >
            <div class="flex flex-col">
                <span
                    class="text-xl font-serif font-bold text-brand-blue dark:text-white uppercase tracking-wider leading-tight"
                    style="font-family: 'IM Fell English', serif;"
                >
                    {t("site.title.1")}
                </span>
                <span
                    class="text-sm font-serif text-brand-blue-light dark:text-white uppercase tracking-wider leading-tight"
                    style="font-family: 'IM Fell English', serif;"
                >
                    {t("site.title.2")}
                </span>
            </div>
            <button
                id="drawer-close"
                class="p-2 text-gray-500 hover:text-red-500 transition-colors rounded-full hover:bg-gray-100 dark:hover:bg-white/10"
            >
                <svg
                    class="w-6 h-6"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>

        <!-- Navigation List -->
        <nav class="flex-1 overflow-y-auto py-2">
            <ul class="space-y-0 list-none m-0 p-0">
                {
                    links.map((link) =>
                        link.children ? (
                            <li class="border-b border-gray-50 dark:border-gray-800/50">
                                <div class="px-6 py-2 text-xs uppercase font-bold text-gray-400 dark:text-gray-500 tracking-widest mt-2">
                                    {link.label}
                                </div>
                                <ul class="list-none m-0 p-0">
                                    {link.children.map((child) => (
                                        <li>
                                            <a
                                                href={child.href}
                                                class="block px-6 py-3 text-lg text-gray-700 dark:text-gray-200 hover:bg-blue-50 dark:hover:bg-white/5 hover:text-brand-blue dark:hover:text-brand-blue-light transition-colors"
                                                style="font-family: 'IM Fell English', serif;"
                                            >
                                                {child.label}
                                            </a>
                                        </li>
                                    ))}
                                </ul>
                            </li>
                        ) : (
                            <li>
                                <a
                                    href={link.href}
                                    class="block px-6 py-3 text-lg text-gray-700 dark:text-gray-200 hover:bg-blue-50 dark:hover:bg-white/5 hover:text-brand-blue dark:hover:text-brand-blue-light transition-colors border-l-4 border-transparent hover:border-brand-blue dark:hover:border-brand-blue-light"
                                    style="font-family: 'IM Fell English', serif;"
                                >
                                    {link.label}
                                </a>
                            </li>
                        ),
                    )
                }
            </ul>
        </nav>

        <!-- Footer -->
